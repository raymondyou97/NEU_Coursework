<div class="container">
    <%= if @current_user do %>
      <h1>Number of tasks currently assigned to <%= @current_user.name %>: <%= length(@tasks) %> </h1>
      
      <%= render TaskTrackerWeb.TaskView, "index.html", assigns %>
    <% else %>
      <h1>Welcome to Task Tracker</h1>
      <p><%= link "Register", to: Routes.user_path(@conn, :new) %></p>
   <% end %>
</div>

